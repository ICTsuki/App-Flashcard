<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <import type="android.view.View"/>
    <variable
        name="flashcardData"
        type="com.example.flashcard.ui.model.FlashcardModel"/>
  </data>

  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:app="http://schemas.android.com/apk/res-auto"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="10dp"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="18dp"
        app:cardElevation="2dp"
        app:strokeWidth="1dp"
        app:strokeColor="@android:color/darker_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

      <!-- FRONT -->
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/card_front"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="18dp"
          android:visibility="@{flashcardData.isFlipped ? View.GONE : View.VISIBLE}">

        <TextView
            android:id="@+id/card_question"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{flashcardData.question}"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lineSpacingExtra="2dp"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <LinearLayout
            android:id="@+id/card_options"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toBottomOf="@+id/card_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

          <TextView
              android:id="@+id/card_option1"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{flashcardData.options[0]}"
              android:textSize="15sp"
              android:background="@drawable/bg_option_ripple"
              android:clickable="true"
              android:focusable="true"
              android:layout_marginTop="10dp" />

          <TextView
              android:id="@+id/card_option2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{flashcardData.options[1]}"
              android:textSize="15sp"
              android:background="@drawable/bg_option_ripple"
              android:clickable="true"
              android:focusable="true"
              android:layout_marginTop="10dp" />

          <TextView
              android:id="@+id/card_option3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{flashcardData.options[2]}"
              android:textSize="15sp"
              android:background="@drawable/bg_option_ripple"
              android:clickable="true"
              android:focusable="true"
              android:layout_marginTop="10dp" />

          <TextView
              android:id="@+id/card_option4"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@{flashcardData.options[3]}"
              android:textSize="15sp"
              android:background="@drawable/bg_option_ripple"
              android:clickable="true"
              android:focusable="true"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="4dp" />

        </LinearLayout>

      </androidx.constraintlayout.widget.ConstraintLayout>

      <!-- BACK -->
      <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/card_back_container"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:padding="22dp"
          android:visibility="@{flashcardData.isFlipped ? View.VISIBLE : View.GONE}">

        <TextView
            android:id="@+id/card_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{flashcardData.answer}"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tap_to_flip_hint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tap_to_flip_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tap_to_flip_hint"
            android:textSize="12sp"
            android:alpha="0.75"
            android:background="@drawable/bg_hint_pill"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:layout_marginBottom="6dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

      </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
