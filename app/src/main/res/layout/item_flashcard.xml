<?xml version="1.0" encoding="utf-8"?>
<layout>
  <data>
    <import type="android.view.View"/>
    <variable
      name="flashcardData"
      type="com.example.flashcard.ui.model.FlashcardModel"/>
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
      android:id="@+id/card_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:clickable="true"
      app:cardCornerRadius="20dp"
      android:layout_marginTop="10dp"
      app:strokeColor="@color/black">
      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/card_front"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:visibility="@{flashcardData.isFlipped? View.GONE: View.VISIBLE}">
        <TextView
          android:id="@+id/card_question"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:text="@{flashcardData.question}"
          android:textSize="18sp"
          android:layout_marginBottom="24dp"
          android:gravity="center"/>
        <LinearLayout
          android:id="@+id/card_options"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toBottomOf="@id/card_question"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:orientation="vertical"
          android:gravity="center">
          <TextView
            android:id="@+id/card_option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{flashcardData.options[0]}"
            android:textSize="16sp"
            android:gravity="center"/>
          <TextView
            android:id="@+id/card_option2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{flashcardData.options[1]}"
            android:textSize="16sp"
            android:gravity="center"/>
          <TextView
            android:id="@+id/card_option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{flashcardData.options[2]}"
            android:textSize="16sp"
            android:gravity="center"/>
          <TextView
            android:id="@+id/card_option4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{flashcardData.options[3]}"
            android:textSize="16sp"
            android:gravity="center"/>
        </LinearLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>

      <TextView
        android:id="@+id/card_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@{flashcardData.answer}"
        android:textSize="30sp"
        android:visibility="@{flashcardData.isFlipped? View.VISIBLE: View.GONE}"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center"/>


    </com.google.android.material.card.MaterialCardView>

  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>